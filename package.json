{
  "name": "chasebrowse",
  "private": true,
  "version": "0.0.3",
  "description": "Navegador multiplataforma basado en Electron y Vite con persistencia de pesta√±as.",
  "author": "IDellamea",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "dev": "concurrently \"npm run start:vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "start:vite": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "re-resizable": "^6.11.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.dellamea.chasebrowse",
    "icon": "logo.ico",
    "forceCodeSigning": false,
    "productName": "ChaseBrowse",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "IDellamea",
        "repo": "ChaseBrowse"
      }
    ],
    "files": [
      "dist/**/*",
      "main.cjs",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "dir"
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    }
  }
}
